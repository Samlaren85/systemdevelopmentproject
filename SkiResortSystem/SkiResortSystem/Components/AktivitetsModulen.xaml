<UserControl x:Class="SkiResortSystem.Components.AktivitetsModulen"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SkiResortSystem.Components"
             xmlns:vm="clr-namespace:SkiResortSystem.ViewModels"
             d:DataContext="{d:DesignInstance Type=vm:MainViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="1080" d:DesignWidth="1920" FontFamily="Candara" FontSize="13">
    <TabControl TabStripPlacement="Left" Background="#FFA6C3E4">
        <TabControl.Resources>
            <Style TargetType="TabItem">
                <Setter Property="Background" Value="#FF5e8ec2" />
                <Setter Property="Foreground" Value="White" />
                <Setter Property="BorderBrush" Value="White"/>
                <Setter Property="Height" Value="50" />
                <Setter Property="Width" Value="192" />
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="TabItem">

                            <Grid>

                                <VisualStateManager.VisualStateGroups>

                                    <VisualStateGroup x:Name="SelectionStates">
                                        <VisualState x:Name="Unselected" />

                                        <VisualState x:Name="Selected">

                                            <Storyboard>

                                                <ObjectAnimationUsingKeyFrames Storyboard.TargetName="TextBlock"
                                                                                   Storyboard.TargetProperty="TextDecorations">

                                                    <DiscreteObjectKeyFrame KeyTime="0">
                                                        <DiscreteObjectKeyFrame.Value>
                                                            <TextDecorationCollection>
                                                                <TextDecoration Location="Underline" PenThicknessUnit="FontRecommended">
                                                                    <TextDecoration.Pen>

                                                                        <Pen Thickness="7" Brush="White" />
                                                                    </TextDecoration.Pen>
                                                                </TextDecoration>
                                                            </TextDecorationCollection>
                                                        </DiscreteObjectKeyFrame.Value>
                                                    </DiscreteObjectKeyFrame>
                                                </ObjectAnimationUsingKeyFrames>
                                            </Storyboard>
                                        </VisualState>
                                    </VisualStateGroup>
                                </VisualStateManager.VisualStateGroups>

                                <Border Background="#FF5e8ec2" BorderBrush="White" BorderThickness="0,0,0,2">

                                    <TextBlock x:Name="TextBlock" Text="{TemplateBinding Header}" Margin="5" VerticalAlignment="Center" HorizontalAlignment="Center" TextAlignment="Center"/>
                                </Border>
                            </Grid>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>


            <Style TargetType="TextBox">

                <Setter Property="Height" Value="20"/>
                <Setter Property="FontSize" Value="16"/>

            </Style>


            <Style TargetType="TextBlock">
                <Setter Property="Foreground" Value="Black"/>
                <Setter Property="FontSize" Value="18"/>
            </Style>

            <Style TargetType="RadioButton">

                <Setter Property="FontSize" Value="18"/>
            </Style>

            <Style TargetType="Button">
                <Setter Property="FontSize" Value="18"/>
                <Setter Property="BorderBrush" Value="White" />
                <Setter Property="Background" Value="#FF5e8ec2"/>
                <Setter Property="Foreground" Value="White"/>
            </Style>

            <Style TargetType="DataGridCell">

                <Setter Property="Background" Value="White"/>
                <Setter Property="FontSize" Value="18"/>
                <Setter Property="Height" Value="43"/>

            </Style>

            <Style TargetType="DataGridColumnHeader">
                <Setter Property="Background" Value="#FF5e8ec2"/>
                <Setter Property="FontSize" Value="18"/>
                <Setter Property="Foreground" Value="White"/>
                <Setter Property="HorizontalAlignment" Value="Stretch"/>
                <Setter Property="VerticalAlignment" Value="Stretch"/>
                <Setter Property="HorizontalContentAlignment" Value="Center"/>

            </Style>

        </TabControl.Resources>
        <TabItem Header="BOKA AKTIVITET">

            <Canvas Height="auto" Width="1760">

                <TextBlock Text="Sök kund" Canvas.Left="80" Canvas.Top="76"/>
                <ComboBox ItemsSource="{Binding BookingResults}" SelectedItem="{Binding SelectedBooking}" BorderBrush="White" Background="White" Canvas.Left="80" Canvas.Top="104" Width="229" HorizontalAlignment="Center" VerticalAlignment="Top" Height="20" />
                <TextBox Background="White"  Text="{Binding SearchBooking, UpdateSourceTrigger=PropertyChanged}" Canvas.Left="80" Canvas.Top="104" Width="206" HorizontalAlignment="Left" VerticalAlignment="Center" />
                <TextBlock Text="{Binding NoBookingResult}" Foreground="Red" RenderTransformOrigin="0.013,0.393" Canvas.Left="80" Canvas.Top="127" HorizontalAlignment="Center" VerticalAlignment="Top" />

                <DataGrid Background="White" Width="908" Height="430" BorderBrush="Black" BorderThickness="2" ItemsSource="{Binding AktivitetsSökning, Mode=TwoWay}" CanUserAddRows="False" AutoGenerateColumns="False" Canvas.Left="80" Canvas.Top="158" HorizontalAlignment="Center" VerticalAlignment="Top" IsReadOnly="True">
                    <DataGrid.InputBindings>
                        <MouseBinding
                        MouseAction="LeftDoubleClick"
                        Command="{Binding DoubleClickActivityBooking}"/>
                    </DataGrid.InputBindings>
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="TYP" Width="*" Binding="{Binding}"/>
                        <DataGridTextColumn Header="VARAKTIGHET" Width="*" Binding="{Binding}"/>
                        <DataGridTextColumn Header="ANTAL" Width="*" Binding="{Binding}"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Canvas>

        </TabItem>


        <TabItem Header="HANTERA AKTIVITETER" >

            <Canvas Height="auto" Width="1760">

                <TextBlock Text="Sök kund" Canvas.Left="80" Canvas.Top="76"/>
                <ComboBox ItemsSource="{Binding SearchResults}" SelectedItem="{Binding SelectedCustomer}" BorderBrush="White" Background="White" Canvas.Left="80" Canvas.Top="104" Width="229" HorizontalAlignment="Center" VerticalAlignment="Top" Height="20" />
                <TextBox Background="White"  Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" Canvas.Left="80" Canvas.Top="104" Width="206" HorizontalAlignment="Left" VerticalAlignment="Center" />
                <TextBlock Text="{Binding ErrorMessage}" Foreground="Red" RenderTransformOrigin="0.013,0.393" Canvas.Left="80" Canvas.Top="127" HorizontalAlignment="Center" VerticalAlignment="Top" />
                <TextBlock Text="Avresedatum" Foreground="Black" FontSize="15" Canvas.Left="449" Canvas.Top="144" HorizontalAlignment="Center" VerticalAlignment="Top"/>
                <DatePicker Canvas.Left="449" Canvas.Top="169" BorderBrush="{x:Null}" SelectedDate="{Binding FetchDate}"/>
                <TextBlock Text="Ankomstdatum" Foreground="Black" FontSize="15" Canvas.Left="449" Canvas.Top="76"/>
                <DatePicker Canvas.Left="449" Canvas.Top="104" BorderBrush="{x:Null}" SelectedDate="{Binding ReturnDate}"/>
                <Button Content="Sök" Canvas.Left="614" Canvas.Top="165" Command="{Binding SearchActivities}" RenderTransformOrigin="1.311,2.576" HorizontalAlignment="Center" VerticalAlignment="Center" Width="120"/>
                <TextBox Canvas.Left="614" TextWrapping="Wrap" Canvas.Top="106" Width="120" Text="{Binding TypeOfActivity, UpdateSourceTrigger=PropertyChanged}" />

                <DataGrid Background="White" Width="908" Height="390" BorderBrush="Black" BorderThickness="2" ItemsSource="{Binding FoundActivities, Mode=TwoWay}" CanUserAddRows="False" AutoGenerateColumns="False" Canvas.Left="80" Canvas.Top="207" HorizontalAlignment="Center" VerticalAlignment="Top" IsReadOnly="True">
                    <DataGrid.InputBindings>
                        <MouseBinding
                        MouseAction="LeftDoubleClick"
                        Command="{Binding DoubleClickActivityCommand}"/>
                    </DataGrid.InputBindings>
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="NAMN" Width="*" Binding="{Binding}"/>
                        <DataGridTextColumn Header="STARTDATUM" Width="*" Binding="{Binding}"/>
                        <DataGridTextColumn Header="SLUTDATUM" Width="*" Binding="{Binding}"/>
                        <DataGridTextColumn Header="BOKNINGSNUMMER" Width="*" Binding="{Binding}"/>
                        <DataGridTextColumn Header="TYP" Width="*" Binding="{Binding}"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Canvas>

        </TabItem>

        <TabItem Header="BOKA UTRUSTNING">

            <Canvas Height="auto" Width="1760">

                <TextBlock Text="Sök kund" Canvas.Left="80" Canvas.Top="76"/>
                <ComboBox ItemsSource="{Binding SearchResults}" SelectedItem="{Binding SelectedCustomer}" BorderBrush="White" Background="White" Canvas.Left="80" Canvas.Top="104" Width="229" HorizontalAlignment="Center" VerticalAlignment="Top" Height="20" />
                <TextBox Background="White"  Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" Canvas.Left="80" Canvas.Top="104" Width="206" HorizontalAlignment="Left" VerticalAlignment="Center" />
                <TextBlock Text="{Binding ErrorMessage}" Foreground="Red" RenderTransformOrigin="0.013,0.393" Canvas.Left="80" Canvas.Top="127" HorizontalAlignment="Center" VerticalAlignment="Top" />

                <DataGrid Background="White" Width="908" Height="296" BorderBrush="Black" BorderThickness="2" ItemsSource="{Binding Equipmentlist, Mode=TwoWay}" CanUserAddRows="False" AutoGenerateColumns="False" Canvas.Left="80" Canvas.Top="158" HorizontalAlignment="Center" VerticalAlignment="Top">
                    <DataGrid.Columns>
                        <DataGridCheckBoxColumn Header="UTRUSTNING" Width="*" Binding="{Binding EquipmentTyp}"/>
                        <DataGridTemplateColumn Header="FRÅN" Width="*">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <DatePicker SelectedDate="{Binding FromDate}"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTemplateColumn Header="TILL" Width="*">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <DatePicker SelectedDate="{Binding ToDate}"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTextColumn Header="ANTAL" Width="*" Binding="{Binding Amount}"/>
                        <DataGridTextColumn Header="PRIS" Width="*" Binding="{Binding Price}"/>
                    </DataGrid.Columns>
                </DataGrid>
                <DataGrid Background="White" Width="908" Height="90" BorderBrush="Black" BorderThickness="2" ItemsSource="{Binding SizeList, Mode=TwoWay}" 
                          CanUserAddRows="False" AutoGenerateColumns="True" Canvas.Left="80" Canvas.Top="489" HorizontalAlignment="Center" VerticalAlignment="Top">
                    <DataGrid.Columns>
                        <DataGridTemplateColumn>
                            <DataGridTemplateColumn.Header>
                                <TextBlock Text="{Binding Size}"/>
                            </DataGridTemplateColumn.Header>
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBox Text="{Binding OrderAount}"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Canvas>

        </TabItem>


        <TabItem Header="HANTERA UTRUSTNING" >
            <Canvas Height="auto" Width="1760">

                <TextBlock Text="Sök kund" Canvas.Left="80" Canvas.Top="76"/>
                <ComboBox ItemsSource="{Binding SearchResults}" SelectedItem="{Binding SelectedCustomer}" BorderBrush="White" Background="White" Canvas.Left="80" Canvas.Top="104" Width="229" HorizontalAlignment="Center" VerticalAlignment="Top" Height="20" />
                <TextBox Background="White"  Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" Canvas.Left="80" Canvas.Top="104" Width="206" HorizontalAlignment="Left" VerticalAlignment="Center" />
                <TextBlock Text="{Binding ErrorMessage}" Foreground="Red" RenderTransformOrigin="0.013,0.393" Canvas.Left="80" Canvas.Top="127" HorizontalAlignment="Center" VerticalAlignment="Top" />
                <TextBlock Text="Avresedatum" Foreground="Black" FontSize="15" Canvas.Left="449" Canvas.Top="144" HorizontalAlignment="Center" VerticalAlignment="Top"/>
                <DatePicker Canvas.Left="449" Canvas.Top="169" BorderBrush="{x:Null}" SelectedDate="{Binding FetchDate}"/>
                <TextBlock Text="Ankomstdatum" Foreground="Black" FontSize="15" Canvas.Left="449" Canvas.Top="76"/>
                <DatePicker Canvas.Left="449" Canvas.Top="104" BorderBrush="{x:Null}" SelectedDate="{Binding ReturnDate}"/>
                <Button Content="Sök" Canvas.Left="614" Canvas.Top="165" Command="{Binding SearchEquipment}" RenderTransformOrigin="1.311,2.576" HorizontalAlignment="Center" VerticalAlignment="Center" Width="120"/>
                <TextBox Canvas.Left="614" TextWrapping="Wrap" Canvas.Top="106" Width="120" Text="{Binding TypeOfEquipment, UpdateSourceTrigger=PropertyChanged}" />

                <DataGrid Background="White" Width="908" Height="390" BorderBrush="Black" BorderThickness="2" ItemsSource="{Binding FoundEquipment, Mode=TwoWay}" CanUserAddRows="False" AutoGenerateColumns="False" Canvas.Left="80" Canvas.Top="207" HorizontalAlignment="Center" VerticalAlignment="Top" IsReadOnly="True">
                    <DataGrid.InputBindings>
                        <MouseBinding
                        MouseAction="LeftDoubleClick"
                        Command="{Binding DoubleClickEquipmentCommand}"/>
                    </DataGrid.InputBindings>
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="NAMN" Width="*" Binding="{Binding}"/>
                        <DataGridTextColumn Header="STARTDATUM" Width="*" Binding="{Binding}"/>
                        <DataGridTextColumn Header="SLUTDATUM" Width="*" Binding="{Binding}"/>
                        <DataGridTextColumn Header="BOKNINGSNUMMER" Width="*" Binding="{Binding}"/>
                        <DataGridTextColumn Header="TYP" Width="*" Binding="{Binding}"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Canvas>
        </TabItem>

        <TabItem Header="LÄMNA UT &amp;&#10;RAPPORTERA IN UTRUSTNING">
            <Canvas Height="auto" Width="1760">

                <TextBlock Text="LÄMNA UT &amp; RAPPORTERA IN UTRUSTNING" Foreground="Black" FontSize="15" Canvas.Left="80" Canvas.Top="76"/>
                <DatePicker SelectedDate="{Binding ReportDate}" Canvas.Left="80" Canvas.Top="111" Width="229" HorizontalAlignment="Center" VerticalAlignment="Top" Height="25" />

                <DataGrid Background="White" Width="908" Height="379" BorderBrush="Black" BorderThickness="2" ItemsSource="{Binding CurrentEquipment, Mode=TwoWay}" CanUserAddRows="False" AutoGenerateColumns="False" Canvas.Left="80" Canvas.Top="158" HorizontalAlignment="Center" VerticalAlignment="Top">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="NAMN" Width="*" Binding="{Binding}" IsReadOnly="True"/>
                        <DataGridTextColumn Header="STARTDATUM" Width="*" Binding="{Binding}" IsReadOnly="True"/>
                        <DataGridTextColumn Header="SLUTDATUM" Width="*" Binding="{Binding}" IsReadOnly="True"/>
                        <DataGridTextColumn Header="BOKNINGSNUMMER" Width="*" Binding="{Binding}" IsReadOnly="True"/>
                        <DataGridTextColumn Header="HYLLA" Width="*" Binding="{Binding}"/>
                    </DataGrid.Columns>
                </DataGrid>
                <Button Content="Rapportera in utrustning" Canvas.Left="784" Canvas.Top="568" Command="{Binding RecieveEquipment}" RenderTransformOrigin="1.311,2.576" Width="200" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                <Button Content="Lämna ut utrustning" Canvas.Left="573" Canvas.Top="568" Command="{Binding HandOutEquipment}" RenderTransformOrigin="1.311,2.576" Width="200" HorizontalAlignment="Left" VerticalAlignment="Center"/>
            </Canvas>
        </TabItem>

        <TabItem Header="VISA BELÄGGNING">

            <Canvas Height="auto" Width="1760">

                <DataGrid Name="BeläggningsData" Width="856" Height="410" AutoGenerateColumns="False" Background="White" BorderThickness="2" Canvas.Left="80" Canvas.Top="149" Foreground="Black" BorderBrush="Black" HorizontalAlignment="Center" VerticalAlignment="Top">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="DATUM" Width="*"></DataGridTextColumn>
                        <DataGridTextColumn Header="LGH1" Width="*"></DataGridTextColumn>
                        <DataGridTextColumn Header="LGH2" Width="*"></DataGridTextColumn>
                        <DataGridTextColumn Header="CAMPING" Width="*"></DataGridTextColumn>
                        <DataGridTextColumn Header="KONF1" Width="*"></DataGridTextColumn>
                        <DataGridTextColumn Header="KONF2" Width="*"></DataGridTextColumn>
                    </DataGrid.Columns>
                </DataGrid>


                <TextBlock Text="Datum:" Canvas.Left="80" Canvas.Top="58" />
                <DatePicker Canvas.Top="60" Canvas.Left="150" Width="110" />
                <TextBlock Text="Tillgängligt per datum" Foreground="Black" Canvas.Left="80" Canvas.Top="110" HorizontalAlignment="Center" VerticalAlignment="Top" />
                <RadioButton Content="Boende/Konferens" Canvas.Left="524" Canvas.Top="110" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                <RadioButton Content="Utrustning" Canvas.Left="722" Canvas.Top="110" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                <RadioButton Content="Aktivitet" Canvas.Left="845" Canvas.Top="110" HorizontalAlignment="Left" VerticalAlignment="Top"/>

            </Canvas>

        </TabItem>

    </TabControl>
</UserControl>

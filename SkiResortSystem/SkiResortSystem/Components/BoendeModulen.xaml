<UserControl x:Class="SkiResortSystem.Components.BoendeModulen"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SkiResortSystem.Components"
             xmlns:vm="clr-namespace:SkiResortSystem.ViewModels"
             d:DataContext="{d:DesignInstance Type=vm:MainViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="1080" d:DesignWidth="1920" FontFamily="Candara" FontSize="13">

    <TabControl TabStripPlacement="Left" Background="#FFA6C3E4">
        <TabControl.Resources>
            <Style TargetType="TabItem">
                <Setter Property="Background" Value="#FF5e8ec2" />
                <Setter Property="Foreground" Value="White" />
                <Setter Property="BorderBrush" Value="White"/>
                <Setter Property="Height" Value="50" />
                <Setter Property="Width" Value="192" />
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="TabItem">

                            <Grid>

                                <VisualStateManager.VisualStateGroups>

                                    <VisualStateGroup x:Name="SelectionStates">
                                        <VisualState x:Name="Unselected" />

                                        <VisualState x:Name="Selected">

                                            <Storyboard>

                                                <ObjectAnimationUsingKeyFrames Storyboard.TargetName="TextBlock"
                                                                                   Storyboard.TargetProperty="TextDecorations">

                                                    <DiscreteObjectKeyFrame KeyTime="0">
                                                        <DiscreteObjectKeyFrame.Value>
                                                            <TextDecorationCollection>
                                                                <TextDecoration Location="Underline" PenThicknessUnit="FontRecommended">
                                                                    <TextDecoration.Pen>

                                                                        <Pen Thickness="7" Brush="White" />
                                                                    </TextDecoration.Pen>
                                                                </TextDecoration>
                                                            </TextDecorationCollection>
                                                        </DiscreteObjectKeyFrame.Value>
                                                    </DiscreteObjectKeyFrame>
                                                </ObjectAnimationUsingKeyFrames>
                                            </Storyboard>
                                        </VisualState>
                                    </VisualStateGroup>
                                </VisualStateManager.VisualStateGroups>

                                <Border Background="#FF5e8ec2" BorderThickness="0,0,0,2" BorderBrush="White">

                                    <TextBlock x:Name="TextBlock" Text="{TemplateBinding Header}" Margin="5" VerticalAlignment="Center" HorizontalAlignment="Center" TextAlignment="Center"/>
                                </Border>
                            </Grid>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>


            <Style TargetType="DataGridCell">

                <Setter Property="Background" Value="White"/>
                <Setter Property="FontSize" Value="18"/>
                <Setter Property="Height" Value="43"/>

            </Style>

            <Style TargetType="DataGridColumnHeader">
                <Setter Property="Background" Value="#FF5e8ec2"/>
                <Setter Property="FontSize" Value="18"/>
                <Setter Property="Foreground" Value="White"/>
                <Setter Property="HorizontalAlignment" Value="Stretch"/>
                <Setter Property="VerticalAlignment" Value="Stretch"/>
                <Setter Property="HorizontalContentAlignment" Value="Center"/>

            </Style>




            <Style TargetType="TextBox">

                <Setter Property="Height" Value="20"/>
                <Setter Property="FontSize" Value="16"/>

            </Style>


            <Style TargetType="TextBlock">
                <Setter Property="Foreground" Value="Black"/>
                <Setter Property="FontSize" Value="18"/>
            </Style>

            <Style TargetType="RadioButton">

                <Setter Property="FontSize" Value="18"/>
            </Style>

            <Style TargetType="Button">
                <Setter Property="FontSize" Value="18"/>
                <Setter Property="BorderBrush" Value="White" />
                <Setter Property="Background" Value="#FF5e8ec2"/>
                <Setter Property="Foreground" Value="White"/>
            </Style>


        </TabControl.Resources>
        <TabItem  Header="BOKA BOENDE/KONFERENS">

            <Canvas Height="auto" Width="1760">



                <TextBlock Text="SÖK KUND" Canvas.Left="80" Canvas.Top="76"/>
                <ComboBox ItemsSource="{Binding SearchResults}" SelectedItem="{Binding SelectedCustomer}" BorderBrush="White" Background="White" SelectionChanged="ComboBox_SelectionChanged" Canvas.Left="80" Canvas.Top="104" Width="229" HorizontalAlignment="Center" VerticalAlignment="Top" Height="20" />
                <TextBox Background="White"  Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" Canvas.Left="80" Canvas.Top="104" Width="206" HorizontalAlignment="Left" VerticalAlignment="Center" />
                <TextBlock Text="{Binding ErrorMessage}" Foreground="Red" RenderTransformOrigin="0.013,0.393" Canvas.Left="80" Canvas.Top="127" HorizontalAlignment="Center" VerticalAlignment="Top" />
                <TextBlock Text="{Binding ErrorMessage2}" Foreground="Red" RenderTransformOrigin="0.013,0.393" Canvas.Left="614" Canvas.Top="131" HorizontalAlignment="Left" VerticalAlignment="Top" />
        
                <RadioButton Content="Lägenhet" Canvas.Left="80" Canvas.Top="169" Checked="RadioButton_Checked" HorizontalAlignment="Left" VerticalAlignment="Top" IsChecked="{Binding Lägenhetradiobutton}"/>
                <RadioButton Content="Camping" Canvas.Left="190" Canvas.Top="169" HorizontalAlignment="Left" VerticalAlignment="Center"  IsChecked="{Binding Campingradiobutton}"/>
                <RadioButton Content="Konferens" Canvas.Left="300" Canvas.Top="169" HorizontalAlignment="Left" VerticalAlignment="Top"  IsChecked="{Binding Konferensradiobutton}"/>



                <TextBlock Text="Avresedatum"  Canvas.Left="449" Canvas.Top="144"/>
                <DatePicker Canvas.Left="449" Canvas.Top="169" BorderBrush="{x:Null}" SelectedDate="{Binding Avresetid}"/>
                <TextBlock Text="Ankomstdatum" Canvas.Left="449" Canvas.Top="76"/>
                <DatePicker Canvas.Left="449" Canvas.Top="104" BorderBrush="{x:Null}" SelectedDate="{Binding Ankomsttid}"/>
                <Button Content="Sök" Canvas.Left="614" Canvas.Top="165" Command="{Binding SökLedigaFaciliteter}" RenderTransformOrigin="1.311,2.576" HorizontalAlignment="Center" VerticalAlignment="Center" Width="120" Click="Button_Click_1"/>
                <TextBox Canvas.Left="614" TextWrapping="Wrap" Canvas.Top="106" Width="120" Text="{Binding AntalPersonerTillBoende, UpdateSourceTrigger=PropertyChanged}" />


                <DataGrid Background="White" Width="908" Height="430" BorderBrush="Black" BorderThickness="2" ItemsSource="{Binding FacilitetsSökning}"  IsReadOnly="True"
                          CanUserAddRows="False" AutoGenerateColumns="False" Canvas.Left="80" Canvas.Top="250" HorizontalAlignment="Left" VerticalAlignment="Top" SelectedItem="{Binding Path=SelectedFacility}">
                    <DataGrid.InputBindings>
                        <MouseBinding MouseAction="LeftDoubleClick" Command="{Binding DoubleClickBookingCommand}"/>
                    </DataGrid.InputBindings>
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Typ" Width="*" Binding="{Binding}"/>
                        <DataGridTextColumn Header="Pris" Width="*" Binding="{Binding Facilitetspris}"/>
                    </DataGrid.Columns>
                </DataGrid>
                <TextBlock Text="Antal personer" Canvas.Left="614" Canvas.Top="77"/>
            </Canvas>
            <!--<DataGrid Background="#FFA6C3E4" Width="800" Height="400" Margin="67,223,893,371" BorderBrush="Black" BorderThickness="2"
                    ItemsSource="{Binding SearchResults}" SelectedItem="{Binding Path=SelectCustomer}" 
                    IsReadOnly="True" CanUserAddRows="False" AutoGenerateColumns="False">
                        <DataGrid.InputBindings>
                            <MouseBinding
                    MouseAction="LeftDoubleClick"
                    Command="{Binding DoubleClickCustomerCommand}"/>
                        </DataGrid.InputBindings>
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Person-/Org.nummer" Width="*" Binding="{Binding KundID}"/>
                            <DataGridTextColumn Header="Namn" Width="*" Binding="{Binding}"/>
                            <DataGridTextColumn Header="Telefonnummer" Width="*" Binding="{Binding Telefonnummer}"/>
                            <DataGridTextColumn Header="E-post" Width="*" Binding="{Binding Epost}"/>
                        </DataGrid.Columns>
            </DataGrid>
            <Button Content="Lägg till företagskund" Height="50" Width="220" HorizontalAlignment="Left" Margin="647,36,0,0" VerticalAlignment="Top" Command="{Binding CustomerCompanyOverview}"/>
            <Button Content="Lägg till privatkund" Height="50" Width="220" HorizontalAlignment="Left" Margin="647,128,0,0" VerticalAlignment="Top" Command="{Binding CustomerPrivateOverview}"/>-->





        </TabItem>


        <TabItem Header="HANTERA BOKNINGAR">

            <Canvas Height="auto" Width="1760">


                <DataGrid  Width="856" Height="410" Background="White" AutoGenerateColumns="False"  BorderThickness="2" Canvas.Left="80" Canvas.Top="149" ItemsSource="{Binding }" Foreground="Black" BorderBrush="Black" HorizontalAlignment="Center" VerticalAlignment="Top">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Namn" Width="*" ></DataGridTextColumn>
                        <DataGridTextColumn Header="Ankomstdatum" Width="*"></DataGridTextColumn>
                        <DataGridTextColumn Header="Avresedatum" Width="*"></DataGridTextColumn>
                        <DataGridTextColumn Header="Bokningsnummer" Width="*"></DataGridTextColumn>
                        <DataGridTextColumn Header="AntalPersoner" Width="*"></DataGridTextColumn>
                        <DataGridTextColumn Header="Typ " Width="*"></DataGridTextColumn>
                    </DataGrid.Columns>
                </DataGrid>
                
                    
                
                <TextBox Canvas.Top="85" Canvas.Left="80" Width="293" HorizontalAlignment="Left" VerticalAlignment="Center" />
                
                <TextBlock Text="Förnamn/Efternamn/Bokningsnummer" Foreground="Black" Canvas.Left="80" Canvas.Top="55" />
                <TextBlock Text="SÖK BOKNING/KONFERENS" Foreground="Black" Canvas.Left="80" Canvas.Top="20" HorizontalAlignment="Center" VerticalAlignment="Top" />
                
          
                <DatePicker Canvas.Top="85" Canvas.Left="530" />
                <DatePicker Canvas.Top="85" Canvas.Left="750" />
                <TextBlock Text="Ankomstdatum" Canvas.Top="55" Canvas.Left="530"/>
                <TextBlock Text="Avresedatum" Canvas.Top="55" Canvas.Left="750"  />

            </Canvas>


        </TabItem>

        <TabItem Header="VISA BELÄGGNING">

            <Canvas Height="auto" Width="1760">


                <DataGrid Name="BeläggningsData" Width="856" Height="410" Background="White" AutoGenerateColumns="False" ItemsSource ="{Binding VisaBeläggning, Mode=TwoWay}"   BorderThickness="2" Canvas.Left="80" Canvas.Top="149" Foreground="Black" BorderBrush="Black" HorizontalAlignment="Center" VerticalAlignment="Top">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="DATUM" Width="*" ></DataGridTextColumn>
                        <DataGridTextColumn Header="LGH1" Width="*" ></DataGridTextColumn>
                        <DataGridTextColumn Header="LGH2" Width="*" ></DataGridTextColumn>
                        <DataGridTextColumn Header="CAMPING" Width="*" ></DataGridTextColumn>
                        <DataGridTextColumn Header="KONF1" Width="*" ></DataGridTextColumn>
                        <DataGridTextColumn Header="KONF2" Width="*" ></DataGridTextColumn>
                    </DataGrid.Columns>
                        <DataGrid.RowDetailsTemplate>
                            <DataTemplate>
                                <DataGrid AutoGenerateColumns="False" ItemsSource="{Binding}">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Binding="{Binding}"></DataGridTextColumn>
                                    </DataGrid.Columns>
                                </DataGrid>
                        
                            </DataTemplate>
                        </DataGrid.RowDetailsTemplate>
                    <!--<DataGrid.RowDetailsTemplate>
                        <DataTemplate>
                            <DataGrid ItemsSource="{Binding VisaBeläggning}" AutoGenerateColumns="False">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="DATUM" Width="*" Binding="{Binding }"></DataGridTextColumn>
                                    <DataGridTextColumn Header="LGH1" Width="*" Binding="{Binding }"></DataGridTextColumn>
                                    <DataGridTextColumn Header="LGH2" Width="*" Binding="{Binding }"></DataGridTextColumn>
                                    <DataGridTextColumn Header="CAMPING" Width="*" Binding="{Binding }"></DataGridTextColumn>
                                    <DataGridTextColumn Header="KONF1" Width="*" Binding="{Binding }"></DataGridTextColumn>
                                    <DataGridTextColumn Header="KONF2" Width="*" Binding="{Binding }"></DataGridTextColumn>
                                </DataGrid.Columns>
                            </DataGrid>
                        </DataTemplate>
                    </DataGrid.RowDetailsTemplate>-->

                </DataGrid>
                 
                <TextBlock Text="Datum:" Foreground="Black" Canvas.Left="80" Canvas.Top="58" />
                <DatePicker  Canvas.Top="60" Canvas.Left="150" SelectedDate="{Binding BeläggningAnkomsttid}" />
                
                <TextBlock Text="Tillgängligt per datum" Foreground="Black" Canvas.Left="80" Canvas.Top="110" HorizontalAlignment="Center" VerticalAlignment="Top" />
                <RadioButton Content="Boende/Konferens" IsChecked="{Binding BoendeKonferensbeläggningradiobutton}" Canvas.Left="524" Canvas.Top="110" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                <RadioButton Content="Utrustning" IsChecked="{Binding UtrustningBeläggningradiobutton}" Canvas.Left="722" Canvas.Top="110" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                <RadioButton Content="Aktivitet" IsChecked="{Binding Aktivitetbeläggningradiobutton}" Canvas.Left="845" Canvas.Top="110" HorizontalAlignment="Left" VerticalAlignment="Top"/>

            </Canvas>

        </TabItem>

        <TabItem Header="PRISLISTA">
            
            
        </TabItem>

    </TabControl>
</UserControl>

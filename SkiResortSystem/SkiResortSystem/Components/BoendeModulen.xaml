<UserControl x:Class="SkiResortSystem.Components.BoendeModulen"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SkiResortSystem.Components"
             xmlns:vm="clr-namespace:SkiResortSystem.ViewModels"
             d:DataContext="{d:DesignInstance Type=vm:MainViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="1080" d:DesignWidth="1920" FontFamily="Candara" FontSize="13" >

    <TabControl TabStripPlacement="Left" Background="#FFA6C3E4">
        <TabControl.Resources>
            <Style TargetType="TabItem">
                <Setter Property="Background" Value="#FF5e8ec2" />
                <Setter Property="Foreground" Value="White" />
                <Setter Property="BorderBrush" Value="White"/>
                <Setter Property="Height" Value="50" />
                <Setter Property="Width" Value="190" />
                <Setter Property="Margin" Value="-6,0,0,0"/>

            </Style>


            <Style TargetType="TextBox">

                <Setter Property="Height" Value="20"/>
                <Setter Property="FontSize" Value="16"/>

            </Style>

      
            <Style TargetType="TextBlock">
                <Setter Property="Foreground" Value="Black"/>
                <Setter Property="FontSize" Value="18"/>
            </Style>

            <Style TargetType="RadioButton">

                <Setter Property="FontSize" Value="18"/>
            </Style>

        </TabControl.Resources>
        <TabItem Margin="0,0,0,2" Header="BOKA BOENDE/KONFERENS">

            <Canvas Height="auto" Width="1760">



                <TextBlock Text="Sök kund" Foreground="Black" FontSize="15" Canvas.Left="80" Canvas.Top="76"/>
                <TextBox Background="White"  Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" Canvas.Left="80" Canvas.Top="104" Width="229" HorizontalAlignment="Left" VerticalAlignment="Top" />
                <ComboBox ItemsSource="{Binding SearchResults}" SelectedItem="{Binding SelectedCustomer}" BorderBrush="White" Background="White" SelectionChanged="ComboBox_SelectionChanged" Canvas.Left="80" Canvas.Top="124" Width="229" HorizontalAlignment="Left" VerticalAlignment="Top" Height="20" />
                <TextBlock Text="{Binding ErrorMessage}" Foreground="Red" RenderTransformOrigin="0.013,0.393" Canvas.Left="80" Canvas.Top="144" HorizontalAlignment="Left" VerticalAlignment="Top" />

                <RadioButton Content="Lägenhet" Canvas.Left="80" Canvas.Top="169" Checked="RadioButton_Checked" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                <RadioButton Content="Camping" Canvas.Left="161" Canvas.Top="169" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                <RadioButton Content="Konferens" Canvas.Left="237" Canvas.Top="169" HorizontalAlignment="Left" VerticalAlignment="Top"/>



                <TextBlock Text="Ankomstdatum" Foreground="Black" FontSize="15" Canvas.Left="449" Canvas.Top="144" HorizontalAlignment="Center" VerticalAlignment="Top"/>
                <DatePicker Canvas.Left="449" Canvas.Top="169" BorderBrush="{x:Null}"/>
                <TextBlock Text="Avresedatum" Foreground="Black" FontSize="15" Canvas.Left="449" Canvas.Top="76"/>
                <DatePicker Canvas.Left="449" Canvas.Top="104" BorderBrush="{x:Null}" />

                <DataGrid Background="#FFA6C3E4" Width="908" Height="430" BorderBrush="Black" BorderThickness="2" ItemsSource="{Binding SearchResults, Mode=TwoWay}" CanUserAddRows="False" AutoGenerateColumns="False" Canvas.Left="80" Canvas.Top="250" HorizontalAlignment="Left" VerticalAlignment="Top">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Typ" Width="*" Binding="{Binding }"/>
                        <DataGridTextColumn Header="Pris" Width="*" Binding="{Binding}"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Canvas>






        </TabItem>


        <TabItem Header="HANTERA BOKNINGAR" Margin="-2,0,0,0" >

        </TabItem>

        <TabItem Header="VISA BELÄGGNING" Background="#FF5e8ec2">

            <Canvas Height="auto" Width="1760">


                <DataGrid Name="BeläggningsData" Width="856" Height="410" AutoGenerateColumns="False" Background="Transparent" BorderThickness="2" Canvas.Left="80" Canvas.Top="149" Foreground="Black" BorderBrush="Black" HorizontalAlignment="Center" VerticalAlignment="Top">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="DATUM"></DataGridTextColumn>
                        <DataGridTextColumn Header="LGH1"></DataGridTextColumn>
                        <DataGridTextColumn Header="LGH2"></DataGridTextColumn>
                        <DataGridTextColumn Header="CAMPING"></DataGridTextColumn>
                        <DataGridTextColumn Header="KONF1"></DataGridTextColumn>
                        <DataGridTextColumn Header="KONF2"></DataGridTextColumn>
                    </DataGrid.Columns>
                </DataGrid>


                <TextBlock Text="Datum:" Foreground="Black" Canvas.Left="80" Canvas.Top="58" />
                <TextBox Canvas.Top="60" Canvas.Left="150" Width="70" />
                <TextBlock Text="Tillgängligt per datum" Foreground="Black" Canvas.Left="80" Canvas.Top="110" HorizontalAlignment="Center" VerticalAlignment="Top" />
                <RadioButton Content="Boende/Konfrerens" Canvas.Left="524" Canvas.Top="110" Checked="RadioButton_Checked" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                <RadioButton Content="Utrustning" Canvas.Left="722" Canvas.Top="110" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                <RadioButton Content="Aktivitet" Canvas.Left="845" Canvas.Top="110" HorizontalAlignment="Left" VerticalAlignment="Top"/>

            </Canvas>

        </TabItem>

    </TabControl>
</UserControl>

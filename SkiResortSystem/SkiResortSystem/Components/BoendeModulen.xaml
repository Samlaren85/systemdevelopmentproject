<UserControl x:Class="SkiResortSystem.Components.BoendeModulen"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SkiResortSystem.Components"
             xmlns:vm="clr-namespace:SkiResortSystem.ViewModels"
             d:DataContext="{d:DesignInstance Type=vm:MainViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="1080" d:DesignWidth="1920" FontFamily="Candara" FontSize="13">

    <TabControl TabStripPlacement="Left" Background="#FFA6C3E4">
        <TabControl.Resources>
            <Style TargetType="TabItem">
                <Setter Property="Background" Value="#FF5e8ec2" />
                <Setter Property="Foreground" Value="White" />
                <Setter Property="BorderBrush" Value="White"/>
                <Setter Property="Height" Value="50" />
                <Setter Property="Width" Value="190" />
                <Setter Property="Margin" Value="-6,0,0,0"/>

            </Style>


            <Style TargetType="TextBox">

                <Setter Property="Height" Value="20"/>
                <Setter Property="FontSize" Value="16"/>

            </Style>

            <Style TargetType="Button">
                <Setter Property="FontSize" Value="20"/>
                <Setter Property="BorderBrush" Value="White" />
                <Setter Property="Background" Value="#FF5e8ec2"/>
                <Setter Property="Foreground" Value="White"/>
            </Style>

        </TabControl.Resources>
        <TabItem Margin="0,0,0,2" Header="BOKA BOENDE/KONFERENS">

            <Canvas Height="auto" Width="1760">



                <TextBlock Text="Sök kund" Foreground="Black" FontSize="15" Canvas.Left="80" Canvas.Top="76"/>
                <TextBox Background="White"  Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" Canvas.Left="80" Canvas.Top="104" Width="229" HorizontalAlignment="Left" VerticalAlignment="Top" />
                <ComboBox ItemsSource="{Binding SearchResults}" SelectedItem="{Binding SelectedCustomer}" BorderBrush="White" Background="White" SelectionChanged="ComboBox_SelectionChanged" Canvas.Left="80" Canvas.Top="124" Width="229" HorizontalAlignment="Left" VerticalAlignment="Top" Height="20" />
                <TextBlock Text="{Binding ErrorMessage}" Foreground="Red" RenderTransformOrigin="0.013,0.393" Canvas.Left="80" Canvas.Top="144" HorizontalAlignment="Left" VerticalAlignment="Top" />

                <RadioButton Content="Lägenhet" Canvas.Left="80" Canvas.Top="169" Checked="RadioButton_Checked" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                <RadioButton Content="Camping" Canvas.Left="161" Canvas.Top="169" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                <RadioButton Content="Konferens" Canvas.Left="237" Canvas.Top="169" HorizontalAlignment="Left" VerticalAlignment="Top"/>



                <TextBlock Text="Avresedatum" Foreground="Black" FontSize="15" Canvas.Left="449" Canvas.Top="144" HorizontalAlignment="Center" VerticalAlignment="Top"/>
                <DatePicker Canvas.Left="449" Canvas.Top="169" BorderBrush="{x:Null}" SelectedDate="{Binding Ankomsttid}"/>
                <TextBlock Text="Ankomstdatum" Foreground="Black" FontSize="15" Canvas.Left="449" Canvas.Top="76"/>
                <DatePicker Canvas.Left="449" Canvas.Top="104" BorderBrush="{x:Null}" SelectedDate="{Binding Avresetid}"/>

                <DataGrid Background="#FFA6C3E4" Width="908" Height="430" BorderBrush="Black" BorderThickness="2" ItemsSource="{Binding FacilitetsSökning, Mode=TwoWay}" CanUserAddRows="False" AutoGenerateColumns="False" Canvas.Left="80" Canvas.Top="250" HorizontalAlignment="Left" VerticalAlignment="Top">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Typ" Width="*" Binding="{Binding }"/>
                        <DataGridTextColumn Header="Pris" Width="*" Binding="{Binding}"/>
                    </DataGrid.Columns>
                </DataGrid>
                <Button Content="Sök" Canvas.Left="614" Canvas.Top="165" Command="{Binding SökLedigaFaciliteter}" RenderTransformOrigin="1.311,2.576" HorizontalAlignment="Center" VerticalAlignment="Center" Width="120"/>
                <TextBlock Text="Antal personer" Foreground="Black" Canvas.Left="614" FontSize="15" TextWrapping="Wrap" Canvas.Top="77"/>
                <TextBox Canvas.Left="614" TextWrapping="Wrap" Canvas.Top="106" Width="120" Text="{Binding AntalPersonerTillBoende}"/>
            </Canvas>
            <!--<DataGrid Background="#FFA6C3E4" Width="800" Height="400" Margin="67,223,893,371" BorderBrush="Black" BorderThickness="2"
                    ItemsSource="{Binding SearchResults}" SelectedItem="{Binding Path=SelectCustomer}" 
                    IsReadOnly="True" CanUserAddRows="False" AutoGenerateColumns="False">
                        <DataGrid.InputBindings>
                            <MouseBinding
                    MouseAction="LeftDoubleClick"
                    Command="{Binding DoubleClickCustomerCommand}"/>
                        </DataGrid.InputBindings>
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Person-/Org.nummer" Width="*" Binding="{Binding KundID}"/>
                            <DataGridTextColumn Header="Namn" Width="*" Binding="{Binding}"/>
                            <DataGridTextColumn Header="Telefonnummer" Width="*" Binding="{Binding Telefonnummer}"/>
                            <DataGridTextColumn Header="E-post" Width="*" Binding="{Binding Epost}"/>
                        </DataGrid.Columns>
            </DataGrid>
            <Button Content="Lägg till företagskund" Height="50" Width="220" HorizontalAlignment="Left" Margin="647,36,0,0" VerticalAlignment="Top" Command="{Binding CustomerCompanyOverview}"/>
            <Button Content="Lägg till privatkund" Height="50" Width="220" HorizontalAlignment="Left" Margin="647,128,0,0" VerticalAlignment="Top" Command="{Binding CustomerPrivateOverview}"/>-->





        </TabItem>


        <TabItem Header="HANTERA BOKNINGAR" Margin="-2,0,0,0" >

        </TabItem>

        <TabItem Header="VISA BELÄGGNING" Background="#FF5e8ec2">
            <Grid>
                <DataGrid Name="BeläggningsData" AutoGenerateColumns="False" Background="Transparent" BorderThickness="3" Margin="30,120,400,220" Foreground="Black" BorderBrush="Black" GridLinesVisibility="Vertical">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="DATUM"></DataGridTextColumn>
                        <DataGridTextColumn Header="LGH1"></DataGridTextColumn>
                        <DataGridTextColumn Header="LGH2"></DataGridTextColumn>
                        <DataGridTextColumn Header="CAMPING"></DataGridTextColumn>
                        <DataGridTextColumn Header="KONF1"></DataGridTextColumn>
                        <DataGridTextColumn Header="KONF2"></DataGridTextColumn>
                    </DataGrid.Columns>
                </DataGrid>
                <TextBlock Text="Fråndatum" Margin="23,0,900,860"/>
                <TextBox Margin="30,0,1200,780"  />

                <TextBlock Text="Tilldatum" Margin="180,0,1040,860"/>
                <TextBox Margin="180,0,1040,780"  />

            </Grid>

        </TabItem>

    </TabControl>
</UserControl>

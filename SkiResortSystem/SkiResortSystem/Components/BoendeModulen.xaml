<UserControl x:Class="SkiResortSystem.Components.BoendeModulen"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SkiResortSystem.Components"
             xmlns:vm="clr-namespace:SkiResortSystem.ViewModels"
             d:DataContext="{d:DesignInstance Type=vm:MainViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <TabControl HorizontalAlignment="Left" TabStripPlacement="Left" Background="#FFA6C3E4">
        <TabControl.Resources>
            <Style TargetType="TabItem">
                <Setter Property="Background" Value="#FF5e8ec2" />
                <Setter Property="Foreground" Value="White" />
                <Setter Property="BorderBrush" Value="White"/>
                <Setter Property="Height" Value="50" />
                <Setter Property="Width" Value="190" />
                <Setter Property="Margin" Value="-6,0,0,0"></Setter>


            </Style>
            <Style TargetType="TextBlock">

                <Setter Property="Height" Value="20"/>
                <Setter Property="Width" Value="400" ></Setter>

            </Style>
            <Style TargetType="TextBox">

                <Setter Property="Height" Value="20"/>
                <Setter Property="FontSize" Value="16"/>

            </Style>
            <Style TargetType="Button">
                <Setter Property="FontSize" Value="20"/>
                <Setter Property="BorderBrush" Value="White" />
                <Setter Property="Background" Value="White"/>
            </Style>

        </TabControl.Resources>
        <TabItem Margin="0,0,0,2" Header="BOKA BOENDE/KONFERENS" Width="auto" >

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                </Grid.RowDefinitions>


                <TextBlock Text="Sök kund" Foreground="Black" Grid.Column="0" FontSize="15" Margin="50,52,0,135"/>
                <TextBox Background="White" Grid.Column="0"  Margin="50,129,231,164" Width="170" Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" />
                <ComboBox ItemsSource="{Binding SearchResults}" SelectedItem="{Binding SelectedCustomer}" Margin="50,169,231,125" BorderBrush="White" Background="White" />
                <TextBlock Text="{Binding ErrorMessage}" Foreground="Red" Margin="51,129,-241,12" RenderTransformOrigin="0.013,0.393" Grid.ColumnSpan="3" />


            </Grid>
        </TabItem>


        <TabItem Header="HANTERA BOKNINGAR"  Width="auto" Height="50" Margin="-2,0,0,0" VerticalAlignment="Bottom" >

        </TabItem>

        <TabItem Header="VISA BELÄGGNING"  Width="auto">
            <Grid>
                <DataGrid Name="BeläggningsData" AutoGenerateColumns="False">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="DATUM"></DataGridTextColumn>
                        <DataGridTextColumn Header="LGH1"></DataGridTextColumn>
                        <DataGridTextColumn Header="LGH2"></DataGridTextColumn>
                        <DataGridTextColumn Header="CAMPING"></DataGridTextColumn>
                        <DataGridTextColumn Header="KONF1"></DataGridTextColumn>
                        <DataGridTextColumn Header="KONF2"></DataGridTextColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </TabItem>

    </TabControl>
</UserControl>

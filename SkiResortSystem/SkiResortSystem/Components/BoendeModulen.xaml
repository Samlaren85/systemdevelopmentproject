<UserControl x:Class="SkiResortSystem.Components.BoendeModulen"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SkiResortSystem.Components"
             xmlns:vm="clr-namespace:SkiResortSystem.ViewModels"
             d:DataContext="{d:DesignInstance Type=vm:MainViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="1080" d:DesignWidth="1920">
    <TabControl HorizontalAlignment="Left" TabStripPlacement="Left" Background="#FFA6C3E4">
        <TabControl.Resources>
            <Style TargetType="TabItem">
                <Setter Property="Background" Value="#FF5e8ec2" />
                <Setter Property="Foreground" Value="White" />
                <Setter Property="BorderBrush" Value="White"/>
                <Setter Property="Height" Value="50" />
                <Setter Property="Width" Value="190" />
                <Setter Property="Margin" Value="-6,0,0,0"></Setter>


            </Style>
            <Style TargetType="TextBlock">

                <Setter Property="Height" Value="20"/>
                <Setter Property="Width" Value="400" ></Setter>

            </Style>
            <Style TargetType="TextBox">

                <Setter Property="Height" Value="20"/>
                <Setter Property="FontSize" Value="16"/>

            </Style>

        </TabControl.Resources>
        <TabItem Margin="0,0,0,2" Header="BOKA BOENDE/KONFERENS" Width="auto">

            <Canvas Height="auto" Width="1760">



                <TextBlock Text="Sök kund" Foreground="Black" FontSize="15" Canvas.Left="39" Canvas.Top="81"/>
                <TextBox Background="White"  Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" Canvas.Left="39" Canvas.Top="109" Width="229" HorizontalAlignment="Center" VerticalAlignment="Top" />
                <ComboBox ItemsSource="{Binding SearchResults}" SelectedItem="{Binding SelectedCustomer}" BorderBrush="White" Background="White" SelectionChanged="ComboBox_SelectionChanged" Canvas.Left="39" Canvas.Top="129" Width="229" HorizontalAlignment="Left" VerticalAlignment="Center" Height="20" />
                <TextBlock Text="{Binding ErrorMessage}" Foreground="Red" RenderTransformOrigin="0.013,0.393" Canvas.Left="39" Canvas.Top="149" HorizontalAlignment="Left" VerticalAlignment="Center" />



            </Canvas>

        </TabItem>


        <TabItem Header="HANTERA BOKNINGAR"  Width="auto" Height="50" Margin="-2,0,0,0" >

        </TabItem>

        <TabItem Header="VISA BELÄGGNING"  Width="auto">
            <Grid>
                <DataGrid Name="BeläggningsData" AutoGenerateColumns="False">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="DATUM"></DataGridTextColumn>
                        <DataGridTextColumn Header="LGH1"></DataGridTextColumn>
                        <DataGridTextColumn Header="LGH2"></DataGridTextColumn>
                        <DataGridTextColumn Header="CAMPING"></DataGridTextColumn>
                        <DataGridTextColumn Header="KONF1"></DataGridTextColumn>
                        <DataGridTextColumn Header="KONF2"></DataGridTextColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </TabItem>

    </TabControl>
</UserControl>

<UserControl x:Class="SkiResortSystem.Components.KundModulen"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SkiResortSystem.Components"
             xmlns:vm="clr-namespace:SkiResortSystem.ViewModels"
             d:DataContext="{d:DesignInstance Type=vm:MainViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="900" d:DesignWidth="1200">
    <TabControl Padding="-2,0,0,0" Margin="0,0,0,0" HorizontalAlignment="Left" TabStripPlacement="Left" Background="#FFA6C3E4">
        <TabControl.Resources>
            <Style TargetType="TabItem">
                <Setter Property="Background" Value="#FF5e8ec2" />
                <Setter Property="Foreground" Value="White" />
                <Setter Property="BorderBrush" Value="White"/>
                <Setter Property="Height" Value="50" />
                <Setter Property="Width" Value="150" />
                <Setter Property="BorderThickness" Value="2" />
            </Style>
            <Style TargetType="TextBlock">

                <Setter Property="Height" Value="20"/>

            </Style>
            <Style TargetType="TextBox">

                <Setter Property="Height" Value="20"/>

            </Style>

        </TabControl.Resources>
        <TabItem Header="LÄGG TILL PRIVATKUND" >

            <TextBlock Text="dsakkdsk"></TextBlock>
        </TabItem>


        <TabItem Header="LÄGG TILL FÖRETAGSKUND"  >
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                </Grid.RowDefinitions>

                <TextBlock Text="LÄGG TILL NY FÖRETAGSKUND" Foreground="Black" Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="0" FontSize="20" Margin="48,10,2,125"/>

                <TextBlock Text="Organisationsnummer" Foreground="Black" Grid.Column="0" FontSize="15" Margin="50,50,2,77"/>
                <Border CornerRadius="5" Background="White" Grid.Column="0" Height="20" Margin="50,20,60,0" Width="170">
                    <TextBox Text="{Binding OrganisationsnummerID, UpdateSourceTrigger=PropertyChanged}"/>
                </Border>

                <TextBlock Text="Företagsnamn" Foreground="Black" FontSize="15" Margin="0,50,0,70" Grid.ColumnSpan="2" Grid.Column="1"/>
                <Border CornerRadius="5" Background="White" Grid.Column="1"  Height="20" Margin="0,40,100,20" Width="300">
                    <TextBox/>
                </Border>


                <TextBlock Text="BESÖKSADRESS" Foreground="Black" Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="1" FontSize="15" Margin="50,0,30,100" TextDecorations="Underline"/>


                <TextBlock Text="FAKTURAADRESS" Foreground="Black" Grid.Column="1" Grid.ColumnSpan="2" Grid.Row="1" FontSize="15" Margin="50,0,30,100" TextDecorations="Underline"/>


                <TextBlock Text="Gatuadress" Foreground="Black" Grid.Column="0" Grid.Row="1" FontSize="15" Margin="50,0,20,35"/>
                <Border CornerRadius="5" Background="White" Grid.Column="0" Grid.Row="1" Height="20" Margin="50,20,56,21" Width="170">
                    <TextBox/>
                </Border>

                <TextBlock Text="Gatuadress" Foreground="Black" Grid.Column="1" Grid.Row="1" FontSize="15" Margin="50,0,20,35"/>
                <Border CornerRadius="5" Background="White" Grid.Column="1" Grid.Row="1" Height="20" Margin="50,20,300,20" Width="270" Grid.ColumnSpan="2">
                    <TextBox/>
                </Border>


                <TextBlock Text="Postnummer" Foreground="Black" Grid.Column="0" Grid.Row="1" Grid.RowSpan="1" FontSize="15" Margin="50,70,0,0"/>
                <Border CornerRadius="5" Background="White" Grid.Column="0" Grid.RowSpan="2" Grid.Row="1" Height="20" Margin="40,0,120,15" Width="100">
                    <TextBox/>
                </Border>

                <TextBlock Text="Postort" Foreground="Black" Grid.Column="0" Grid.Row="1" Grid.RowSpan="1" FontSize="15" Margin="170,70,0,0"  />
                <Border CornerRadius="5" Background="White" Grid.Column="0" Grid.ColumnSpan="2" Grid.RowSpan="2" Grid.Row="1" Height="20" Margin="50,0,125,15" Width="140">
                    <TextBox/>
                </Border>

                <TextBlock Text="Postort" Foreground="Black" Grid.Column="1" Grid.Row="1" FontSize="15"  Margin="200,70,0,0"  />
                <Border CornerRadius="5" Background="White" Grid.Column="1" Grid.ColumnSpan="2" Grid.RowSpan="2" Grid.Row="1" Height="20" Margin="100,0,120,15" Width="140">
                    <TextBox/>
                </Border>

                <TextBlock Text="Postnummer" Foreground="Black" Grid.Column="1" Grid.Row="1" Grid.RowSpan="1" FontSize="15" Margin="50,70,0,0"  />
                <Border CornerRadius="5" Background="White" Grid.Column="1" Grid.ColumnSpan="2" Grid.RowSpan="2" Grid.Row="1" Height="20" Margin="50,0,400,15" Width="140">
                    <TextBox/>
                </Border>


                <TextBlock Text="Kontaktperson" Foreground="Black" Grid.Column="0" Grid.Row="2" FontSize="15" Margin="50,0,0,70"/>
                <Border CornerRadius="5" Background="White" Grid.Column="0"  Grid.Row="2" Height="20" Margin="50,0,130,30" Width="100">
                    <TextBox/>
                </Border>

                <TextBlock Text="E-post" Foreground="Black" Grid.Column="0" Grid.Row="2" FontSize="15" Margin="190,0,0,70"/>
                <Border CornerRadius="5" Background="White" Grid.Column="0"  Grid.Row="2" Height="20" Margin="156,0,130,30" Width="200" Grid.ColumnSpan="2">
                    <TextBox/>
                </Border>

                <TextBlock Text="Telefonnummer" Foreground="Black" Grid.Column="0" Grid.Row="2" FontSize="15" Margin="50,30,0,0"/>
                <Border CornerRadius="5" Background="White" Grid.Column="0"  Grid.Row="2" Height="20" Margin="20,70,0,0" Width="200">
                    <TextBox/>
                </Border>









            </Grid>

        </TabItem>

        <TabItem Header="HANTERA KUND">

        </TabItem>

    </TabControl>
</UserControl>
